<!-- ========== JS (self-contained charts, interactions, animations) ========== -->
<script>
/* ===== Utility: smooth scroll ===== */
function scrollToSection(id){
  const el = document.getElementById(id);
  if(!el) return;
  el.scrollIntoView({behavior:'smooth', block:'center'});
}

/* ===== Simple reveal on scroll ===== */
const observer = new IntersectionObserver((entries)=>{
  entries.forEach(e=>{
    if(e.isIntersecting) e.target.classList.add('revealed');
  });
},{threshold:0.12});
document.querySelectorAll('.reveal').forEach(n=>observer.observe(n));

/* ===== Counters animate (demo values) ===== */
function animateCount(id, start, end, dur){
  const el = document.getElementById(id);
  if(!el) return;
  let startTime = null;
  function step(ts){
    if(!startTime) startTime = ts;
    const progress = Math.min((ts - startTime)/dur,1);
    const val = start + Math.floor(progress * (end - start));
    el.textContent = typeof end === 'number' ? val + (id==='ctr-success' ? '%' : '') : end;
    if(progress<1) requestAnimationFrame(step);
  }
  requestAnimationFrame(step);
}
animateCount('ctr-success', 90, 98, 1400);
animateCount('ctr-cost',0,0,100); // static text
animateCount('ctr-kyc', 120, 60, 900);

/* ===== Pricing card hover/pop selection ===== */
document.querySelectorAll('.price-card').forEach(c=>{
  c.addEventListener('mouseenter',()=>{ c.classList.add('pop');});
  c.addEventListener('mouseleave',()=>{ c.classList.remove('pop');});
  c.addEventListener('focus',()=>{ c.classList.add('pop');});
  c.addEventListener('blur',()=>{ c.classList.remove('pop');});
});

/* ===== Tooltip ===== */
const tooltip = document.getElementById('tooltip');
document.addEventListener('mousemove', (e)=>{ tooltip.style.left = (e.clientX+14)+'px'; tooltip.style.top = (e.clientY-8)+'px' });

/* ===== Charts: simple lightweight drawing (no libs) ===== */
function drawStacked(){
  const canvas = document.getElementById('stacked-chart');
  const ctx = canvas.getContext('2d');
  const DPR = window.devicePixelRatio || 1;
  canvas.width = canvas.clientWidth * DPR;
  canvas.height = canvas.clientHeight * DPR;
  ctx.scale(DPR,DPR);
  ctx.clearRect(0,0,canvas.clientWidth, canvas.clientHeight);

  // Data (Premium cost breakdown)
  const labels = ['Design','Mobile','Frontend','Backend','QA','Deploy'];
  const values = [5000,8800,11200,17600,3200,2800];
  const colors = ['#7b4dff','#8fe34b','#ff6a3d','#5b6bff','#ffd66b','#ff2d6a'];
  const total = values.reduce((a,b)=>a+b,0);
  const width = canvas.clientWidth - 40;
  const barX = 20, barY = 40, barH = 28;

  // Draw stacked bar
  let cursor = barX;
  for(let i=0;i<values.length;i++){
    const w = (values[i]/total)*width;
    ctx.fillStyle = colors[i];
    roundRect(ctx, cursor, barY, w, barH, 8);
    cursor += w;
  }
  // labels
  ctx.fillStyle = 'rgba(255,255,255,0.85)';
  ctx.font = '13px '+getComputedStyle(document.documentElement).getPropertyValue('--sans');
  ctx.fillText('Cost Breakdown (stacked) — Total: $'+total.toLocaleString(), barX, barY - 12);

  // legend interactive
  const legendY = barY + barH + 20;
  let lx = barX;
  for(let i=0;i<labels.length;i++){
    ctx.fillStyle = colors[i];
    roundRect(ctx, lx, legendY, 14,14,4);
    ctx.fillStyle = 'rgba(255,255,255,0.9)';
    ctx.fillText(' '+labels[i]+' $'+values[i].toLocaleString(), lx+20, legendY+12);
    lx += ctx.measureText(' '+labels[i]+' $'+values[i].toLocaleString()).width + 52;
  }

  // hover detection
  canvas.onmousemove = (ev)=>{
    const r = canvas.getBoundingClientRect();
    const x = (ev.clientX - r.left);
    // find which segment
    let cur = barX;
    for(let i=0;i<values.length;i++){
      const w = (values[i]/total)*width;
      if(x>=cur && x<=cur+w){
        showTooltip(labels[i] + ': $' + values[i].toLocaleString());
        return;
      }
      cur += w;
    }
    hideTooltip();
  };
  canvas.onmouseleave = hideTooltip;
}

function drawLine(){
  const canvas = document.getElementById('line-chart');
  const ctx = canvas.getContext('2d');
  const DPR = window.devicePixelRatio || 1;
  canvas.width = canvas.clientWidth * DPR;
  canvas.height = canvas.clientHeight * DPR;
  ctx.scale(DPR,DPR);
  ctx.clearRect(0,0,canvas.clientWidth, canvas.clientHeight);

  // mock revenue data (months)
  const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
  const data = [5,12,25,40,60,85,120,165,210,265,310,380]; // k$
  const max = Math.max(...data);
  const padding = 28;
  const w = canvas.clientWidth - padding*2;
  const h = canvas.clientHeight - padding*2;

  ctx.strokeStyle = 'rgba(255,255,255,0.18)';
  ctx.lineWidth = 1;
  ctx.beginPath();
  ctx.moveTo(padding, padding + h);
  ctx.lineTo(padding + w, padding + h);
  ctx.stroke();

  // draw line
  ctx.beginPath();
  for(let i=0;i<data.length;i++){
    const x = padding + (i/(data.length-1))*w;
    const y = padding + h - (data[i]/max)*h;
    if(i===0) ctx.moveTo(x,y); else ctx.lineTo(x,y);
  }
  ctx.strokeStyle = '#9cf14b';
  ctx.lineWidth = 3;
  ctx.stroke();

  // points and hover
  for(let i=0;i<data.length;i++){
    const x = padding + (i/(data.length-1))*w;
    const y = padding + h - (data[i]/max)*h;
    ctx.fillStyle = '#fff';
    ctx.beginPath(); ctx.arc(x,y,4,0,Math.PI*2); ctx.fill();
    // store clickable region
  }
  canvas.onmousemove = (ev)=>{
    const r = canvas.getBoundingClientRect();
    const x = ev.clientX - r.left;
    const y = ev.clientY - r.top;
    // find nearest point
    let nearest = null, dist=Infinity, idx=-1;
    for(let i=0;i<data.length;i++){
      const px = padding + (i/(data.length-1))*w;
      const py = padding + h - (data[i]/max)*h;
      const d = Math.hypot(px-x,py-y);
      if(d<dist){ dist=d; nearest=[px,py]; idx=i; }
    }
    if(dist<18){
      showTooltip(months[idx]+': $'+data[idx]+'k');
    } else hideTooltip();
  };
  canvas.onmouseleave=hideTooltip;
}

/* ===== Tooltip helpers ===== */
function showTooltip(text){
  tooltip.style.display='block'; tooltip.textContent=text;
}
function hideTooltip(){ tooltip.style.display='none'; tooltip.textContent=''; }

/* ===== Rounded rect helper ===== */
function roundRect(ctx,x,y,w,h,r){
  ctx.beginPath();
  ctx.moveTo(x+r,y);
  ctx.arcTo(x+w,y,x+w,y+h,r);
  ctx.arcTo(x+w,y+h,x,y+h,r);
  ctx.arcTo(x,y+h,x,y,r);
  ctx.arcTo(x,y,x+w,y,r);
  ctx.closePath();
  ctx.fill();
}

/* init charts on load and on resize */
function initCharts(){ drawStacked(); drawLine(); }
window.addEventListener('load', initCharts);
window.addEventListener('resize', ()=>{
  clearTimeout(window.__chartResize); window.__chartResize=setTimeout(initCharts,220);
});

/* ===== Accessibility: keyboard nav for price cards ===== */
document.querySelectorAll('.price-card').forEach(pc=>{
  pc.setAttribute('tabindex',0);
});

/* ===== Preview button: subtle animation to demonstrate microinteraction ===== */
document.getElementById('preview-btn').addEventListener('click',(e)=>{
  const el = document.querySelector('.hero-left');
  el.animate([{transform:'translateY(0)'},{transform:'translateY(-6px)'},{transform:'translateY(0)'}],{duration:450, easing:'ease-out'});
  scrollToSection('conclude');
});

</script>
</body>
</html>
